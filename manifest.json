{
    "manifest_version": 2,

    "name": "Vision Devtools",
    "description": "Test",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": "./assets/logo.png",
        "default_popup": "popup.html",
        "default_title": "Vision Devtools"
    },
    "permissions": [
        "activeTab"
    ],
    "devtools_page": "backend.html",

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["src/content.js"],
        "run_at": "document_idle"
    }]
}
